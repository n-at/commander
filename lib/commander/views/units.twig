{% extends "card.twig" %}

{% block cardTitle %}Units{% endblock %}

{% block cardContent %}

    <div>
        <a class="btn btn-default" href="/units/add">
            <i class="fa fa-plus"></i> Add unit
        </a>
        <div class="pull-right">{% include "filter-form.twig" %}</div>
        <div class="clearfix"></div>
    </div>

    <br>

    <ul class="list-group">
        {% for unit in units %}
            <li class="list-group-item">

                <strong class="item-name">{{ unit.name | escape }}</strong>

                <em>{{ unit.address | escape }}</em>

                <span class="text-info">{{ unit.status | escape }}</span>

                <div class="pull-right control-buttons">

                    <a href="/units/edit/{{ unit.id }}" class="text-info">
                        <i class="fa fa-edit"></i> Edit
                    </a>

                    <a href="/units/delete/{{ unit.id }}" class="text-danger">
                        <i class="fa fa-remove"></i> Remove
                    </a>

                </div>
                
                <div class="clearfix"></div>

            </li>
        {% endfor %}
    </ul>

{% endblock %}
